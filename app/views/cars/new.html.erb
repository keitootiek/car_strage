<%= render "cars/header" %>
<%= stylesheet_link_tag "new_edit", "data-turbo-track": "reload" %>

<%= form_with model: @car, id: 'new_car' ,local: true do |f| %>
<div class="form_main">



<%# <div class="image_post">
      <!-- プレビュー領域 -->
      <!-- プレビュー画像はここに表示されます -->
