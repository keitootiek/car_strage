<div class = "wrapper">
  <%= render "devise/shared/header" %>

  <div class = "sign_up_content">
    <h1>ログイン</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :employee_num,"社員番号" %><br/>
          <%= f.text_field :employee_num, class:"form-control",autofocus: true, maxlength: 6 %>
        </div>

        <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, class:"form-control",autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password,"パスワード" %><br />
          <%= f.password_field :password, class:"form-control",autocomplete: "new-password" %>
        </div>

        
      <%# 　アカウント記憶用 %>
          <%# <% if devise_mapping.rememberable? %>
            <%# <div class="field">  %>
            <%# <%= f.check_box :remember_me %> 
            <%# <%= f.label :このアカウントを記憶する %> 
            <%# </div>  %>
      <%# <% end %> 

        <div class="actions">
          <%= f.submit "ログイン" , class:"login_btn"%>
        </div>
      <% end %>
    <div class = "to-new-registration">
      <%= link_to "未登録の方はこちら", new_registration_path(resource_name) %>
    </div>
  </div>    
  <%= render "layouts/footer" %>
</div>